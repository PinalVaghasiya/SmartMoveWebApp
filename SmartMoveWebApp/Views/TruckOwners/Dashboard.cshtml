@model SmartMoveWebApp.Models.ViewModels.EditDriverProfileViewModel
@{
    ViewBag.Title = "Driver Dashboard";
    Layout = "~/Views/Shared/_TruckOwnersLayout.cshtml";
}

<!-- Dashboard Content start -->
<div class="col-lg-9">
    <div class="tab-content" id="myTabContent">
        <!-- Dashboard  start -->
        <div class="tab-pane fade show active" id="team_member_1" role="tabpanel" aria-labelledby="tab_item_1">
            <div class="row">
                <div class="col-lg-12">
                    <div class="team-member-info">
                        <a href="@Url.Action("EditProfile", "TruckOwners")" class="btn btn-info" style="float:right">Edit Profile</a>
                        <h4 class="text-center">Profile</h4>
                        <div class="row col-lg-12 profile-title">
                            <h4>General Information</h4>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>First Name</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.FirstName</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>Last name</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.LastName</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>Phone</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.Phone</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>Address</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.Address1<br />
                               @Model.Address2</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>Zip Code</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.ZipCode</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>City</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.City</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>State</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.State</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 profile-title">
                            <h4>Truck Information</h4>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-3">
                                <h5>Truck Type</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@ViewBag.TruckType</p>
                            </div>
                            <div class="col-lg-3">
                                <h5>Truck Make</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.TruckMake</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-3">
                                <h5>Truck Model</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.TruckModel</p>
                            </div>
                            <div class="col-lg-3">
                                <h5>Truck Year</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.TruckYear</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-3">
                                <h5>Truck Color</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.TruckColor</p>
                            </div>
                            <div class="col-lg-3">
                                <h5>Truck License Plate</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.LicensePlate</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-3">
                                <h5>Driver License Number</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.DriverLicenseNumber</p>
                            </div>
                            <div class="col-lg-3">
                                <h5>Vehicle Registration Number</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.VehicleRegNumber</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-3">
                                <h5>Driver Insurance Policy Number</h5>
                            </div>
                            <div class="col-lg-3">
                                <p>@Model.DriverInsurancePolicy</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Dashboard  End -->
    </div>
</div>
<!-- Dashboard Content End -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myMenu.nav.nav-tabs li.nav-item.active').removeClass('active');
            $("#menu_item_2").parent("li").addClass('active');
        });
    </script>
}