@model SmartMoveWebApp.Models.ViewModels.EditCustomerProfileViewModel
@{
    ViewBag.Title = "Customer Dashboard";
    Layout = "~/Views/Shared/_CustomersLayout.cshtml";
}

<!-- Profile Content start -->
<div class="col-lg-9">
    <div class="tab-content" id="myTabContent">
        <!-- Profile  start -->
        <div class="tab-pane fade show active" id="team_member_1" role="tabpanel" aria-labelledby="tab_item_1">
            <div class="row">
                <div class="col-lg-12">
                    <div class="team-member-info">
                        <a href="@Url.Action("EditProfile", "Customers")" class="btn btn-info" style="float:right">Edit Profile</a>
                        <h4 class="text-center">Profile</h4>
                        <div class="row col-lg-12 profile-title">
                            <h4>General Information</h4>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>First Name</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.FirstName</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>Last Name</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.LastName</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>Phone</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.Phone</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>Address</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>
                                    @Model.Address1<br />
                                    @Model.Address2
                                </p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>Zip Code</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.ZipCode</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>City</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.City</p>
                            </div>
                        </div>
                        <div class="row col-lg-12 text-left">
                            <div class="col-lg-2">
                                <h5>State</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.State</p>
                            </div>
                            <div class="col-lg-2">
                                <h5>Average Rating</h5>
                            </div>
                            <div class="col-lg-4">
                                <p>@Model.AverageRating/5</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Profile  End -->
    </div>
</div>
<!-- Profile Content End -->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myMenu.nav.nav-tabs li.nav-item.active').removeClass('active');
            $("#menu_item_2").parent("li").addClass('active');
        });
    </script>
}