@model IEnumerable<Order>
@{
    ViewBag.Title = "My Trips";
    Layout = "~/Views/Shared/_CustomersLayout.cshtml";
}


<!-- My Trips Content start -->
<div class="col-lg-9">
    <div class="tab-content" id="myTabContent">
        <!-- My Trips  start -->
        <div class="tab-pane fade show active" id="team_member_1" role="tabpanel" aria-labelledby="tab_item_1">
            <div class="row">
                <div class="col-lg-12">
                    <div class="team-member-info">
                        <table class="table table-bordered text-center">
                            <tr class="side-menu">
                                <th>Pickup</th>
                                <th>Truck Owner</th>
                                <th>Amount</th>
                                <th>Truck</th>
                                <th>Drop</th>
                                <th>Ratings</th>
                            </tr>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6">No Past / Current Orders Found.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (Order order in Model)
                                {
                                <tr>
                                    <td>@order.PickupLat</td>
                                    <td></td>
                                    <td></td>
                                    <td>@order.TruckTypeId</td>
                                    <td>@order.DropLat</td>
                                    <td></td>
                                </tr>
                                }
                            }
                            </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- My Trips  End -->
    </div>
</div>
<!-- My Trips Content End -->

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myMenu.nav.nav-tabs li.nav-item.active').removeClass('active');
            $("#menu_item_1").parent("li").addClass('active');
        });
    </script>
}