@model IEnumerable<Order>
@{
    ViewBag.Title = "My Trips";
    Layout = "~/Views/Shared/_CustomersLayout.cshtml";
}


<!-- My Trips Content start -->
<div class="col-lg-9">
    <div class="tab-content" id="myTabContent">
        <!-- My Trips  start -->
        <div class="tab-pane fade show active" id="my_trips" role="tabpanel" aria-labelledby="tab_item_1">
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <table class="table mytrips-table text-center">
                            <tr class="side-menu">
                                <th>Date Added</th>
                                <th>Pickup</th>
                                <th>Drop</th>
                                <th>Order Date</th>
                                <th>Truck Type</th>
                                <th>Status</th>
                            </tr>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6">No Past / Current Orders Found.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (Order order in Model)
                                {
                                <tr>
                                    <td>@order.CreatedTime</td>
                                    <td>@order.PickupPlace</td>
                                    <td>@order.DropPlace</td>
                                    <td>@order.OrderDateTime</td>
                                    @if (order.TruckTypeId == 1)
                                    {
                                        <td>Standard Car</td>
                                    }
                                    else if (order.TruckTypeId == 2)
                                    {
                                        <td>Pickup Truck</td>
                                    }
                                    else
                                    {
                                        <td>Cargo Van</td>
                                    }
                                    <td>@order.OrderStatus</td>
                                </tr>
                                }
                            }
                            </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- My Trips  End -->
    </div>
</div>
<!-- My Trips Content End -->

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myMenu.nav.nav-tabs li.nav-item.active').removeClass('active');
            $("#menu_item_1").parent("li").addClass('active');
        });
    </script>
}