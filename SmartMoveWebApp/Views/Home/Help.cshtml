@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="faq-page-area" class="section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="faq-details-content">
                    <div class="single-faq-sub">
                        <h3>Customer Questions</h3>
                        <div class="single-faq-sub-content">
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="heading1">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse1" aria-expanded="true" aria-controls="collapse1">
                                                <span>Where are SmartMove services available?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse1" class="collapse show" aria-labelledby="heading1" data-parent="#accordion">
                                        <div class="card-body">
                                            SmartMove will be launching in San Diego, CA.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading2">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                                <span>What safety measures has SmartMove put in plac </span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse2" class="collapse" aria-labelledby="heading2" data-parent="#accordion">
                                        <div class="card-body">
                                            All drivers have passed a background check, are backed by SmartMove&#39;s insurance policy, have had their driving records examined, and are at least 18 years of age. Your items to be shipped are backed by our cargo insurance policy up to $10,000 of value. Customers are able to rate the drivers conduct, SmartMove uses ratings to help us ensure better customer experiences.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading3">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse3" aria-expanded="false" aria-controls="collapse3">
                                                <span>What does SmartMove do?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse3" class="collapse" aria-labelledby="heading3" data-parent="#accordion">
                                        <div class="card-body">
                                            SmartMove connect willing drivers with trucks, cargo vans, and cars with individuals and businesses that need to transport large, medium, and small items.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading4">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse4" aria-expanded="false" aria-controls="collapse4">
                                                <span>Does SmartMove offer services on Sundays?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse4" class="collapse" aria-labelledby="heading4" data-parent="#accordion">
                                        <div class="card-body">
                                            Yes, in fact, SmartMove offers services 24/7.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading5">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse5" aria-expanded="false" aria-controls="collapse5">
                                                <span>What if an Item doesn't fit through a door?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse5" class="collapse" aria-labelledby="heading5" data-parent="#accordion">
                                        <div class="card-body">
                                            Sometime an item is just too big to get through a door. &nbsp;When this happens you can instruct the SmartMove driver to leave the item outside of the home or business, or, you can have the item returned to the original locations by placing another order through our mobile application, website, or by telephone. &nbsp;Please take all proper measurements prior to requesting a delivery to reduce the chances of this situation occuring.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading6">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse6" aria-expanded="false" aria-controls="collapse6">
                                                <span>Will the drivers handle my items with care?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse6" class="collapse" aria-labelledby="heading6" data-parent="#accordion">
                                        <div class="card-body">
                                            Each driver will come with two straps and a tarp for protection, but we do suggest our customers wrap or package items as nessessary prior to the driver arriving. Drivers are encouraged to inspect items for damage before moving anything.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading7">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse7" aria-expanded="false" aria-controls="collapse7">
                                                <span>Will drivers help me assemble / disassemble large items?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse7" class="collapse" aria-labelledby="heading7" data-parent="#accordion">
                                        <div class="card-body">
                                            In rare circumstances drivers my have to dissasembe and then reassemble items. &nbsp;This is done purely for transport reasons. &nbsp;If you have an item that you believe will need this work please mention this in your request description.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading8">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse8" aria-expanded="false" aria-controls="collapse8">
                                                <span>Can I call the Driver?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse8" class="collapse" aria-labelledby="heading8" data-parent="#accordion">
                                        <div class="card-body">
                                            Yes. &nbsp;You will be able to call the driver through the mobile app. &nbsp;Phone numbers are anonymous.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading9">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse9" aria-expanded="false" aria-controls="collapse9">
                                                <span>What is the cancellation fee?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse9" class="collapse" aria-labelledby="heading9" data-parent="#accordion">
                                        <div class="card-body">
                                            Any time a service request, either on-demand or a reservation is cancelled within 24 hours of the ordered service a $10 cancellation fee will be applied.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading10">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse10" aria-expanded="false" aria-controls="collapse10">
                                                <span>Can I tip the driver?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse10" class="collapse" aria-labelledby="heading10" data-parent="#accordion">
                                        <div class="card-body">
                                            Tipping is not required but drivers greatly appreciate them. 100% of tips go to the drivers.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading11">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse11" aria-expanded="false" aria-controls="collapse11">
                                                <span>How do I pay for a service?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse11" class="collapse" aria-labelledby="heading11" data-parent="#accordion">
                                        <div class="card-body">
                                            Payments are made through our secure website and mobile application.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading12">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse12" aria-expanded="false" aria-controls="collapse12">
                                                <span>Will the estimate quoted be the final price?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse12" class="collapse" aria-labelledby="heading12" data-parent="#accordion">
                                        <div class="card-body">
                                            Prior to ordering a service you will receive an estimate. &nbsp;Your final cost can go lower or higher depending on factors such as light traffic times, fast loading, or, heavy traffic and road construction.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading13">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse13" aria-expanded="false" aria-controls="collapse13">
                                                <span>Does SmartMove transport hazardous materials?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse13" class="collapse" aria-labelledby="heading13" data-parent="#accordion">
                                        <div class="card-body">
                                            No. SmartMove will not be moving any hazardous materials including but not limited to batteries, aerosols, mercury and mercury-containing products, light bulbs, automotive fuels and fluids, propane, fireworks, ammunition, paint, paint thinners, solvents, household cleaners, lawn chemicals, certain personal nail products.
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>


                <div class="faq-details-content">
                    <div class="single-faq-sub">
                        <h3>Become a Driver</h3>
                        <div class="single-faq-sub-content">
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="heading14">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse14" aria-expanded="true" aria-controls="collapse14">
                                                <span>How long do background checks take to process?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse14" class="collapse show" aria-labelledby="heading14" data-parent="#accordion">
                                        <div class="card-body">
                                            In most cases, background check take 2-10 to process following SmartMove receiving the consent to perform the check from drivers. &nbsp;
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading15">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse15" aria-expanded="false" aria-controls="collapse15">
                                                <span>Where can I sign up to drive?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse15" class="collapse" aria-labelledby="heading15" data-parent="#accordion">
                                        <div class="card-body">
                                            You can sign up to drive using <a href="@Url.Action("BecomeDriver", "Home")">this form</a>.
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="faq-details-content">
                    <div class="single-faq-sub">
                        <h3>Driver Questions</h3>
                        <div class="single-faq-sub-content">
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="heading16">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link" data-toggle="collapse" data-target="#collapse16" aria-expanded="true" aria-controls="collapse16">
                                                <span>Am I responsible for damage to an item?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse16" class="collapse show" aria-labelledby="heading16" data-parent="#accordion">
                                        <div class="card-body">
                                            Yes. We strongly recommend that drivers inspect any valuable pieces and take pictures of any noticeable damages prior to loading the item(s). &nbsp;If a driver damages or loses an item the driver will be responsible for paying the $250 deductable.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading17">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse17" aria-expanded="false" aria-controls="collapse17">
                                                <span>What insurance must I have?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse17" class="collapse" aria-labelledby="heading17" data-parent="#accordion">
                                        <div class="card-body">
                                            Drivers must have a satisfactory level of vehicle and health insurance to comply with the laws in your state, and the federal government. In the event of an accident, SmartMove offers supplemental insurance.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading18">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse18" aria-expanded="false" aria-controls="collapse18">
                                                <span>Must drivers pay for the background check?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse18" class="collapse" aria-labelledby="heading18" data-parent="#accordion">
                                        <div class="card-body">
                                            Yes. &nbsp;The cost for a background check is $40 and is non-refundable.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading19">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse19" aria-expanded="false" aria-controls="collapse19">
                                                <span>Are customers allowed to ride in my vehicle?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse19" class="collapse" aria-labelledby="heading19" data-parent="#accordion">
                                        <div class="card-body">
                                            No. &nbsp;Customers are not permitted to ride with their items under the SmartMove Platform.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading20">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse20" aria-expanded="false" aria-controls="collapse20">
                                                <span>Will I receive a 1099?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse20" class="collapse" aria-labelledby="heading20" data-parent="#accordion">
                                        <div class="card-body">
                                            Yes, SmartMove will send them out in a timely manner.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading21">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse21" aria-expanded="false" aria-controls="collapse21">
                                                <span>What violations may contribute to a driver being r</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse21" class="collapse" aria-labelledby="heading21" data-parent="#accordion">
                                        <div class="card-body">
                                            In general, refer to the <a href="http://pickuppronto.com/~pickuppronto/terms.html">terms and conditions</a> you accepted upon becoming a driver with SmartMove, or, the latest updated version of the terms of service. &nbsp;
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading22">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse22" aria-expanded="false" aria-controls="collapse22">
                                                <span>Why do some email alerts have project details and</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse22" class="collapse" aria-labelledby="heading22" data-parent="#accordion">
                                        <div class="card-body">
                                            Sometimes we have to send requests manually if the customer made a change to the date/time/vehicle type. When we send manual emails they will include more details about the project. You can reply to the email to accept these projects. Automated emails that are generated when a new order comes in do not include details. You will need to log into the app to accept these requests.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading23">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse23" aria-expanded="false" aria-controls="collapse23">
                                                <span>How Should Different Items Be Handled?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse23" class="collapse" aria-labelledby="heading23" data-parent="#accordion">
                                        <div class="card-body">
                                            Please read our Policy on Hazardous and Other Sensitive Items&nbsp;<a href="http://pickuppronto.com/handling-materials-what-drivers-should-know">here</a>.
                                        </div>
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-header" id="heading24">
                                        <h5 class="mb-0">
                                            <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse24" aria-expanded="false" aria-controls="collapse24">
                                                <span>How Should I Safely Load Cargo Into My Vehicle?</span>
                                                <i class="fa fa-angle-down"></i>
                                                <i class="fa fa-angle-up"></i>
                                            </button>
                                        </h5>
                                    </div>
                                    <div id="collapse24" class="collapse" aria-labelledby="heading24" data-parent="#accordion">
                                        <div class="card-body">
                                            Learn about SmartMove&#39;s policy on Safely Securing Cargo <a href="http://www.pickuppronto.com/safely-securing-cargo">here</a>.
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Sidebar Area Start -->
            <div class="col-lg-4">
                <div class="sidebar-content-wrap m-t-50">
                    <!-- Single Sidebar Start -->
                    <div class="single-sidebar">
                        <h3>For More Informations</h3>

                        <div class="sidebar-body">
                            <p><i class="fa fa-mobile"></i> +1 800 000 0008</p>
                            <p><i class="fa fa-clock-o"></i> Mon - Sat 8.00am - 8.00pm</p>
                        </div>
                    </div>
                    <!-- Single Sidebar End -->
                </div>
            </div>
            <!-- Sidebar Area End -->

        </div>
        </div>

</section>
